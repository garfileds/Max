/** envelope.wxss **/

.envelope-list {
  padding: 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.envelope {
  border-top: 2px solid #ffeb3b;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
  min-width: 300px;
  background: #fff;
}

.envelope--meituan {
  border-top: 2px solid #ffeb3b;
}

.envelope--ele {
  border-top: 2px solid #2196f3;
}

.envelope__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 35rpx;
  border-bottom: 1px solid #c0c0c0;
  padding: 20rpx 0;
}

.envelope__title {
  color: #2196f3;
}

.envelope__content {
  text-align: center;
  height: 90rpx;
  padding: 30rpx 0;
}

.envelope__button {
  text-align: center;
  background: #73bd73;
  font-size: 35rpx;
  padding: 20rpx;
  margin: 0 -20rpx;
  color: #fff;
}

.icon-text {
  padding: 0 0 0 40rpx;
  background-position: 0 0;
  background-repeat: no-repeat;
  background-size: 35rpx;
}

.icon-ele {
  background-image: url('data:image/svg+xml;base64,');
}

.icon-meituan {
  background-image: url('data:image/svg+xml;base64,');
}

.icon-envelope {
  background-image: url('data:image/svg+xml;base64,');
}

.icon-progress {
  background-image: url('data:image/svg+xml;base64,');
}

.icon-small {
  background-size: 30rpx;
  padding: 0 0 0 35rpx;
  background-position: 0 0;
}

@media screen and (max-width: 1250px) {
  .envelope {
    width: 100%;
  }
}

@media screen and (min-width: 1251px) {
  .envelope {
    width: calc((100% - 60rpx) / 4);
    margin-right: 20rpx;
  }

  .envelope:nth-child(4n) {
    margin-right: 0;
  }
}
